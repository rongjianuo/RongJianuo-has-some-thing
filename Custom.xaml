                          EventType="复制文本" EventData ="/execute as @a at @s run summon Creeper ~ ~2 ~" Type="Clickable" />
        <local:MyListItem Margin="-5,15,-5,0"
                          Logo="pack://application:,,,/images/Blocks/RedstoneBlock.png" Title="TNT来啦" Info="在每个玩家头顶召唤亿点TNT"
                          EventType="复制文本" EventData ="/execute @a~ ~ ~ summon TNT" Type="Clickable" />
        </StackPanel>
    </local:MyCard>
    <local:MyCard Title="实用指令" Margin="0,0,0,15" CanSwap="True" IsSwaped="True">
